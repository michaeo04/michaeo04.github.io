---
interface Props {
  disabled?: boolean;
}

const { disabled = true } = Astro.props;
---

<aside class={`chat-panel ${disabled ? 'disabled' : ''}`}>
  <div class="chat-placeholder">
    <div class="chat-icon">ðŸ’¬</div>
    <p class="chat-title">Chat</p>
    <p class="chat-subtitle text-muted">Coming Soon</p>
