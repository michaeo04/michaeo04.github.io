---
import DodgeGame from './games/DodgeGame.astro';
import FlappyBird from './games/FlappyBird.astro';
---

<div class="game-container">
  <div class="game-header">
    <h3>üéÆ Mini Games</h3>
    <p class="game-instructions">Choose a game to play and have fun!</p>
  </div>

  <!-- Game Selector -->
  <div class="game-selector" id="gameSelector">
    <button class="game-card" data-game="dodge">
      <div class="game-card-icon">üéØ</div>
      <h4>Beige Dodge</h4>
      <p>Dodge falling blocks and survive as long as you can!</p>
      <span class="game-card-action">Play Now ‚Üí</span>
    </button>

    <button class="game-card" data-game="flappy">
      <div class="game-card-icon">üê¶</div>
      <h4>Beige Bird</h4>
      <p>Tap to flap and navigate through pipes!</p>
      <span class="game-card-action">Play Now ‚Üí</span>
    </button>
  </div>

  <!-- Game Display Area -->
  <div class="game-display" id="gameDisplay" style="display: none;">
    <button class="back-button" id="backButton">
      ‚Üê Back to Games
    </button>

    <div class="game-content" id="dodgeGame" style="display: none;">
      <DodgeGame />
    </div>

    <div class="game-content" id="flappyGame" style="display: none;">
      <FlappyBird />
    </div>
  </div>
</div>

<script>
  const gameSelector = document.getElementById('gameSelector')!;
  const gameDisplay = document.getElementById('gameDisplay')!;
  const backButton = document.getElementById('backButton')!;
  const dodgeGame = document.getElementById('dodgeGame')!;
  const flappyGame = document.getElementById('flappyGame')!;

  // Game selection
  document.querySelectorAll('.game-card').forEach(card => {
    card.addEventListener('click', () => {
      const gameName = (card as HTMLElement).dataset.game;

      gameSelector.style.display = 'none';
      gameDisplay.style.display = 'block';

      // Show selected game
      if (gameName === 'dodge') {
        dodgeGame.style.display = 'block';
        flappyGame.style.display = 'none';
      } else if (gameName === 'flappy') {
        flappyGame.style.display = 'block';
        dodgeGame.style.display = 'none';
      }
    });
  });

  // Back to selector
  backButton.addEventListener('click', () => {
    gameDisplay.style.display = 'none';
    gameSelector.style.display = 'grid';
    dodgeGame.style.display = 'none';
    flappyGame.style.display = 'none';
  });
</script>

<style>
  .game-container {
    margin: var(--space-12) 0;
    padding: var(--space-8);
    background: var(--color-bg-secondary);
    border-radius: var(--radius-lg);
    border: 2px solid var(--color-border);
  }

  .game-header {
    text-align: center;
    margin-bottom: var(--space-8);
  }

  .game-header h3 {
    font-size: var(--font-size-2xl);
    color: var(--color-accent-primary);
    margin-bottom: var(--space-3);
  }

  .game-instructions {
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
    margin: 0;
  }

  /* Game Selector */
  .game-selector {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--space-6);
    max-width: 800px;
    margin: 0 auto;
  }

  .game-card {
    background: var(--color-bg-primary);
    border: 2px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: var(--space-6);
    text-align: center;
    cursor: pointer;
    transition: all var(--transition-base);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-3);
  }

  .game-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
    border-color: var(--color-accent-primary);
  }

  .game-card-icon {
    font-size: var(--font-size-5xl);
    margin-bottom: var(--space-2);
  }

  .game-card h4 {
    font-size: var(--font-size-xl);
    color: var(--color-text-primary);
    margin: 0;
  }

  .game-card p {
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
    margin: 0;
    flex-grow: 1;
  }

  .game-card-action {
    font-size: var(--font-size-sm);
    color: var(--color-accent-primary);
    font-weight: var(--font-weight-medium);
    margin-top: var(--space-2);
  }

  /* Game Display */
  .game-display {
    max-width: 600px;
    margin: 0 auto;
  }

  .back-button {
    background: var(--color-bg-primary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    padding: var(--space-2) var(--space-4);
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
    cursor: pointer;
    transition: all var(--transition-fast);
    margin-bottom: var(--space-6);
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
  }

  .back-button:hover {
    background: var(--color-bg-hover);
    color: var(--color-accent-primary);
    border-color: var(--color-accent-primary);
  }

  .game-content {
    margin-top: var(--space-4);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .game-container {
      padding: var(--space-4);
    }

    .game-header h3 {
      font-size: var(--font-size-xl);
    }

    .game-selector {
      grid-template-columns: 1fr;
      gap: var(--space-4);
    }

    .game-card {
      padding: var(--space-4);
    }
  }
</style>
