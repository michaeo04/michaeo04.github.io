---
import BaseLayout from './BaseLayout.astro';
import Sidebar from '@components/layout/Sidebar.astro';
import MainContent from '@components/layout/MainContent.astro';
import ChatPanel from '@components/layout/ChatPanel.astro';

interface Props {
  title: string;
  description?: string;
  contentTitle?: string;
  contentDescription?: string;
}

const { title, description, contentTitle, contentDescription } = Astro.props;
const currentPath = Astro.url.pathname;
---

<BaseLayout title={title} description={description}>
  <div class="layout-grid">
    <Sidebar currentPath={currentPath} />
    <MainContent title={contentTitle} description={contentDescription}>
      <slot />
    </MainContent>
    <ChatPanel disabled={true} />
  </div>
</BaseLayout>
