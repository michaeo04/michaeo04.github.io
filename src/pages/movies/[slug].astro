---
import { getCollection } from 'astro:content';
import CategoryLayout from '@layouts/CategoryLayout.astro';
import { formatDate } from '@utils/content';

export async function getStaticPaths() {
  const movies = await getCollection('movies');
  return movies.map(movie => ({
    params: { slug: movie.slug },
    props: { movie },
  }));
}

const { movie } = Astro.props;
const { Content } = await movie.render();
const { title, director, year, watchedDate, rating, thumbnail, genre, runtime, description } = movie.data;
---

<CategoryLayout
  title={`${title} | Movies`}
  contentTitle={title}
  contentDescription={description}
>
  <article class="movie-review">
    <!-- Movie Header -->
    <div class="movie-header">
      {thumbnail && (
        <div class="movie-thumbnail">
          <img src={thumbnail} alt={`${title} poster`} />
        </div>
      )}

      <div class="movie-meta">
        <h1 class="movie-title">{title}</h1>
        <p class="movie-tagline">{description}</p>

        <div class="movie-info">
          <div class="info-item">
            <span class="info-label">Director</span>
            <span class="info-value">{director}</span>
          </div>

          <div class="info-item">
            <span class="info-label">Year</span>
            <span class="info-value">{year}</span>
          </div>

          {runtime && (
            <div class="info-item">
              <span class="info-label">Runtime</span>
              <span class="info-value">{runtime}</span>
            </div>
          )}

          {genre && genre.length > 0 && (
            <div class="info-item">
              <span class="info-label">Genre</span>
              <span class="info-value">{genre.join(', ')}</span>
            </div>
          )}
        </div>

        <div class="movie-stats">
          <div class="stat-item rating">
            <span class="stat-icon">‚≠ê</span>
            <span class="stat-value">{rating}/10</span>
          </div>

          <div class="stat-item watched-date">
            <span class="stat-icon">üìÖ</span>
            <span class="stat-value">Watched {formatDate(watchedDate)}</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Movie Review Content -->
    <div class="movie-content prose">
      <Content />
    </div>

    <!-- Back to Movies -->
    <div class="back-link">
      <a href="/movies">‚Üê Back to all movie reviews</a>
    </div>
  </article>
</CategoryLayout>

<style>
  .movie-review {
    max-width: 900px;
    margin: 0 auto;
  }

  .movie-header {
    display: grid;
    grid-template-columns: 300px 1fr;
    gap: var(--space-8);
    margin-bottom: var(--space-12);
    padding: var(--space-8);
    background: var(--color-bg-secondary);
    border-radius: var(--radius-lg);
    border: 1px solid var(--color-border);
  }

  .movie-thumbnail {
    position: relative;
    border-radius: var(--radius-md);
    overflow: hidden;
    box-shadow: var(--shadow-lg);
  }

  .movie-thumbnail img {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
  }

  .movie-meta {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  .movie-title {
    font-size: var(--font-size-3xl);
    font-weight: var(--font-weight-bold);
    color: var(--color-text-primary);
    margin: 0;
    line-height: var(--line-height-tight);
  }

  .movie-tagline {
    font-size: var(--font-size-lg);
    color: var(--color-text-secondary);
    font-style: italic;
    margin: 0;
    line-height: var(--line-height-normal);
  }

  .movie-info {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-3);
    padding: var(--space-4);
    background: var(--color-bg-tertiary);
    border-radius: var(--radius-md);
  }

  .info-item {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }

  .info-label {
    font-size: var(--font-size-xs);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-text-muted);
    font-weight: var(--font-weight-medium);
  }

  .info-value {
    font-size: var(--font-size-base);
    color: var(--color-text-primary);
  }

  .movie-stats {
    display: flex;
    gap: var(--space-6);
    padding-top: var(--space-4);
    border-top: 1px solid var(--color-border);
  }

  .stat-item {
    display: flex;
    align-items: center;
    gap: var(--space-2);
  }

  .stat-icon {
    font-size: var(--font-size-xl);
  }

  .stat-value {
    font-size: var(--font-size-base);
    color: var(--color-text-primary);
    font-weight: var(--font-weight-medium);
  }

  .rating .stat-value {
    color: var(--color-accent-primary);
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-bold);
  }

  .movie-content {
    background: var(--color-bg-secondary);
    padding: var(--space-8);
    border-radius: var(--radius-lg);
    border: 1px solid var(--color-border);
    margin-bottom: var(--space-8);
  }

  .back-link {
    text-align: center;
    padding: var(--space-6) 0;
  }

  .back-link a {
    color: var(--color-text-secondary);
    text-decoration: none;
    font-size: var(--font-size-base);
    transition: color var(--transition-fast);
  }

  .back-link a:hover {
    color: var(--color-accent-primary);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .movie-header {
      grid-template-columns: 1fr;
      gap: var(--space-6);
      padding: var(--space-6);
    }

    .movie-thumbnail {
      max-width: 250px;
      margin: 0 auto;
    }

    .movie-title {
      font-size: var(--font-size-2xl);
    }

    .movie-tagline {
      font-size: var(--font-size-base);
    }

    .movie-info {
      grid-template-columns: 1fr;
    }

    .movie-stats {
      flex-direction: column;
      gap: var(--space-3);
    }

    .movie-content {
      padding: var(--space-6);
    }
  }
</style>
