---
import CategoryLayout from '@layouts/CategoryLayout.astro';
import { getAllProjects, formatDate } from '@utils/content';

const projects = await getAllProjects();
---

<CategoryLayout
  title="Projects | Michael Eo"
  contentTitle="Projects"
  contentDescription="Things I've built and learned from"
>
  <div class="projects-list">
    {projects.map(project => (
      <article class="project-card">
        <h3>
          <a href={`/projects/${project.slug}`}>
            {project.data.title}
          </a>
        </h3>
        <p class="description">{project.data.description}</p>
        <div class="meta">
          <time datetime={project.data.date.toISOString()}>
            {formatDate(project.data.date)}
          </time>
          {project.data.tags && (
            <div class="tags">
              {project.data.tags.map(tag => (
                <span class="tag">{tag}</span>
              ))}
            </div>
          )}
        </div>
      </article>
    ))}
  </div>
</CategoryLayout>

<style>
  .projects-list {
    display: grid;
    gap: var(--space-6);
  }

  .project-card {
    padding: var(--space-6);
    background: var(--color-bg-secondary);
    border-radius: var(--radius-lg);
    border: 1px solid var(--color-border);
    transition: all var(--transition-base);
  }

  .project-card:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
    border-color: var(--color-accent-primary);
  }

  .project-card h3 {
    margin-bottom: var(--space-3);
    margin-top: 0;
  }

  .project-card h3 a {
    color: var(--color-accent-primary);
    text-decoration: none;
  }

  .project-card h3 a:hover {
    color: var(--color-accent-hover);
  }

  .description {
    color: var(--color-text-secondary);
    margin-bottom: var(--space-4);
  }

  .meta {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: var(--space-4);
    font-size: var(--font-size-sm);
  }

  time {
    color: var(--color-text-muted);
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
  }

  .tag {
    padding: var(--space-1) var(--space-3);
    background: var(--color-bg-tertiary);
    border-radius: var(--radius-full);
    color: var(--color-text-secondary);
  }
</style>
