---
import CategoryLayout from '@layouts/CategoryLayout.astro';
import { getAllMemories, formatDate } from '@utils/content';

const memories = await getAllMemories();
---

<CategoryLayout
  title="Memories | Michael Eo"
  contentTitle="Memories"
  contentDescription="Moments and experiences worth documenting"
>
  <div class="memories-list">
    {memories.map(memory => (
      <article class="memory-card">
        <h3>
          <a href={`/memories/${memory.slug}`}>
            {memory.data.title}
          </a>
        </h3>
        {memory.data.description && (
          <p class="description">{memory.data.description}</p>
        )}
        <div class="meta">
          <time datetime={memory.data.date.toISOString()}>
            {formatDate(memory.data.date)}
          </time>
          {memory.data.location && (
            <span class="location">üìç {memory.data.location}</span>
          )}
        </div>
      </article>
    ))}
  </div>
</CategoryLayout>

<style>
  .memories-list {
    display: grid;
    gap: var(--space-6);
  }

  .memory-card {
    padding: var(--space-6);
    background: var(--color-bg-secondary);
    border-radius: var(--radius-lg);
    border: 1px solid var(--color-border);
    transition: all var(--transition-base);
  }

  .memory-card:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
    border-color: var(--color-accent-primary);
  }

  .memory-card h3 {
    margin-bottom: var(--space-3);
    margin-top: 0;
  }

  .memory-card h3 a {
    color: var(--color-accent-primary);
    text-decoration: none;
  }

  .memory-card h3 a:hover {
    color: var(--color-accent-hover);
  }

  .description {
    color: var(--color-text-secondary);
    margin-bottom: var(--space-4);
  }

  .meta {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: var(--space-4);
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
  }

  .location {
    display: flex;
    align-items: center;
    gap: var(--space-1);
  }
</style>
